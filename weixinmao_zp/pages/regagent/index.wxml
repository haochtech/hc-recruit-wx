<view class="container">
    <form reportSubmit bindsubmit="savepubinfo">
        <view class="repairform">
            <view class="main">
                <view class="list">
                    <view class="item">
                        <view class="name">姓  名</view>
                        <view class="selectitem">
                            <input name="name" placeholder="请输入您的姓名" type="text"></input>
                        </view>
                    </view>
                    <view class="item">
                        <view class="name">联系方式</view>
                        <view class="selectitem">
                            <input name="tel" placeholder="请输入您的手机号" type="text"></input>
                        </view>
                    </view>
                    <view class="item">
                        <view class="name">微 信 号</view>
                        <view class="selectitem">
                            <input name="weixin" placeholder="请输入您的微信号" type="text"></input>
                        </view>
                    </view>
                    <view class="item">
                        <view class="name">电子邮箱</view>
                        <view class="selectitem">
                            <input name="email" placeholder="请输入您的电子邮箱" type="text"></input>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="weixinmao-float">
            <view class="weixinmao-foot">
                <button class="footer" formType="submit">提交申请</button>
            </view>
        </view>
    </form>
</view>
